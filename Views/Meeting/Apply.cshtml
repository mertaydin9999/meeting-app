@model UserInfo;
@{
    ViewBag.Title = "Toplanti Katilim";
    Layout = "_Layout2";
}
<h1 class="h4 text-center">Toplanti katilim formu</h1>
<form method="post" action="/Meeting/Apply" novalidate>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ad Soyad</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Telefon</label>
        <input asp-for="Phone" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="WillAttend" class="form-label">Katilim Durumu</label>
        <select asp-for="WillAttend" class="form-select">
            <option value="true">Evet Geliyorum</option>
            <option value="false">Hayir Gelmiyorum</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary ">Kaydet </button>
</form>