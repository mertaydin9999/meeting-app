@model List<UserInfo>
@{
    ViewBag.Title = "Katilim Toplanti Listesi";
}
<main class="text-center">
    <h1 class="h4">Toplantiya katilim Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Katilim Durumu</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach(var user in Model)
            {
                var durum = user.WillAttend ? "Evet" : "Hayir";
                var className =user.WillAttend ? "table-success" : "table-danger";
                if(user.WillAttend)
                {
                    i++;
                }
                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@durum </td>
                    <td>
                        <a href="/meeting/details/@user.Id" class="btn btn-sm btn-primary">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <p>Katilimci sayisi: @i</p>
        </div>
    </div>
</main>
